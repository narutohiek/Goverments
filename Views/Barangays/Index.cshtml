@model IEnumerable<GovermentSystem.Models.Barangay>

@{
    ViewData["Title"] = "Barangay Management";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}



<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <!-- Add Barangay Form -->
        <div class="form-section">
            <h4><i class="fas fa-plus-circle"></i> Add New Barangay</h4>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="Barangays" class="form-label"><i class="fas fa-map-marker-alt"></i> Barangay Name</label>
                    <input type="text" class="form-control" id="Barangays" name="Barangays" placeholder="Enter Barangay Name" required>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Add Barangay</button>
            </form>
        </div>
             </div>
</div>
        <div class="card">
            <div class="card-body">
                <div class="form-section">
                <table id="example1" class="table table-striped">
                 
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Barangays)</th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Barangays)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action"><i class="fa fa-edit"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary-action btn-action"><i class="fa fa-eye"></i> View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
            </div>
</div>